networks:
  ozea-net: { driver: bridge }

volumes:
  mysql_data: {}
  redis_data: {}
  grafana_data: {}
  prom_data: {}

services:
  mysql:
    image: mysql:8.0
    container_name: ozea-mysql
    environment:
      MYSQL_ROOT_PASSWORD: ${MYSQL_ROOT_PASSWORD}
      MYSQL_DATABASE: ${MYSQL_DATABASE}
      MYSQL_DEFAULT_AUTHENTICATION_PLUGIN: mysql_native_password
      TZ: Asia/Seoul
    ports:
      - "3307:3306"
    volumes:
      - mysql_data:/var/lib/mysql
      - ../Back/back/database.sql:/docker-entrypoint-initdb.d/init.sql:ro
    networks: [ozea-net]
    command: --default-authentication-plugin=mysql_native_password --character-set-server=utf8mb4 --collation-server=utf8mb4_general_ci

  redis:
    image: redis:7-alpine
    container_name: ozea-redis
    command: ["redis-server", "--requirepass", "${REDIS_PASSWORD}"]
    environment:
      TZ: Asia/Seoul
    ports:
      - "6379:6379"
    volumes:
      - redis_data:/data
    networks: [ozea-net]

  backend-blue:
    container_name: ozea-backend-blue
    build:
      context: ../Back/back
      dockerfile: Dockerfile
    environment:
      TZ: Asia/Seoul
      JDBC_URL: ${JDBC_URL}
      JDBC_USERNAME: ${JDBC_USERNAME}
      JDBC_PASSWORD: ${JDBC_PASSWORD}
      REDIS_HOST: ${REDIS_HOST}
      REDIS_PORT: ${REDIS_PORT}
      REDIS_PASSWORD: ${REDIS_PASSWORD}
      KAKAO_API_KEY: ${KAKAO_API_KEY}
      KAKAO_REDIRECT_URI: ${KAKAO_REDIRECT_URI}
      JWT_SECRET: ${JWT_SECRET}
    env_file:
      - ../.env
    ports:
      - "8080:8080"
    depends_on:
      - mysql
      - redis
    networks: [ozea-net]

  backend-green:
    image: ghcr.io/<ORG>/ozea-backend:${BACKEND_TAG_GREEN:-latest}
    environment:
      TZ: Asia/Seoul
      JDBC_URL: ${JDBC_URL}
      JDBC_USERNAME: ${JDBC_USERNAME}
      JDBC_PASSWORD: ${JDBC_PASSWORD}
      REDIS_HOST: ${REDIS_HOST}
      REDIS_PORT: ${REDIS_PORT}
      REDIS_PASSWORD: ${REDIS_PASSWORD}
      KAKAO_API_KEY: ${KAKAO_API_KEY}
      KAKAO_REDIRECT_URI: ${KAKAO_REDIRECT_URI}
      JWT_SECRET: ${JWT_SECRET}
    env_file:
      - ../.env
    expose:
      - "8080"
    depends_on:
      - mysql
      - redis
    networks: [ozea-net]
    profiles: ["production"]

  frontend:
    container_name: ozea-frontend
    build:
      context: ../Front/frontend
      dockerfile: Dockerfile
    ports:
      - "5173:80"
    depends_on:
      - backend-blue
    networks: [ozea-net]

  prometheus:
    image: prom/prometheus:v2.54.1
    container_name: ozea-prometheus
    volumes:
      - ./monitoring/prometheus.yml:/etc/prometheus/prometheus.yml:ro
      - prom_data:/prometheus
    ports: ["9090:9090"]
    networks: [ozea-net]

  grafana:
    image: grafana/grafana:11.1.0
    container_name: ozea-grafana
    environment:
      GF_SECURITY_ADMIN_USER: ${GF_ADMIN_USER:-admin}
      GF_SECURITY_ADMIN_PASSWORD: ${GF_ADMIN_PASS:-admin}
    volumes:
      - grafana_data:/var/lib/grafana
      - ./monitoring/grafana/provisioning/datasources:/etc/grafana/provisioning/datasources:ro
      - ./monitoring/grafana/provisioning/dashboards:/etc/grafana/provisioning/dashboards:ro
      - ./monitoring/grafana/dashboards:/var/lib/grafana/dashboards:ro
    ports: ["3000:3000"]
    networks: [ozea-net]
